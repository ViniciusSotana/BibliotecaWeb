@model BibliotecaWeb.Models.Autor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pt-3">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control bg-info bg-opacity-50" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="nascimento" class="control-label"></label>
                <input asp-for="nascimento" class="form-control bg-info bg-opacity-50" />
                <span asp-validation-for="nascimento" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index"><i class="fa-solid fa-arrow-left fa-2x"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
