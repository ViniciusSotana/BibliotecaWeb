@model IEnumerable<BibliotecaWeb.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>

<p class="mt-5 mb-5" style="font-size:20px">
    <a asp-action="Create">Cadastrar Livro</a>
</p>
<table class="table">
    <thead class="bg-black text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.publicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantiaEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="bg-info bg-opacity-50">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genero.assunto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.publicacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantiaEstoque)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.livroId"><i class="fa-solid fa-pen fa-2x" style="margin-right: 10px; font-size: 1.5em;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.livroId"><i class="fa-solid fa-bars fa-2x" style="margin-right: 10px; font-size: 1.5em;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.livroId"><i class="fa-solid fa-xmark fa-2x" style="color: #f40101; font-size: 1.5em;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
