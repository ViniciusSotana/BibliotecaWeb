@model BibliotecaWeb.Models.Livro

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="livroId" />
            <div class="form-group">
                <label asp-for="titulo" class="control-label"></label>
                <input asp-for="titulo" class="form-control" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="autorId" class="control-label"></label>
                <select asp-for="autorId" class="form-control" asp-items="ViewBag.autorId"></select>
                <span asp-validation-for="autorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="generoId" class="control-label"></label>
                <select asp-for="generoId" class="form-control" asp-items="ViewBag.generoId"></select>
                <span asp-validation-for="generoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="publicacao" class="control-label"></label>
                <input asp-for="publicacao" class="form-control" />
                <span asp-validation-for="publicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantiaEstoque" class="control-label"></label>
                <input asp-for="quantiaEstoque" class="form-control" />
                <span asp-validation-for="quantiaEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" style="margin-left: 50px; vertical-align: middle;"><i class="fa-solid fa-arrow-left fa-2x"></i></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
