@model BibliotecaWeb.Models.Autor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="autorId" />
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nascimento" class="control-label"></label>
                <input asp-for="nascimento" class="form-control" />
                <span asp-validation-for="nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" style="margin-left: 50px; vertical-align: middle;"><i class="fa-solid fa-arrow-left fa-2x"></i></a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
